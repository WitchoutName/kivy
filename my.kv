WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    pswd: pswd
    name: "main"
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            Label:
                text: "Password"
            TextInput:
                id: pswd
                multiline: False
        Button:
            text: "submit"
            on_release:
                app.root.current = "second" if pswd.text == "pswd" else "main"
                if pswd.text != "pswd": root.btn()
                pswd.text = ""
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"

    Button:
        text: "go back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<P>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'wrong pswd'
    Button:
        text: 'Click me to dismiss'
        on_press: root.dismiss()
